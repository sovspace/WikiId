@model WebApp.ViewModels.CategoryViewModels.UpdateCategoryViewModel

@{
    ViewData["Title"] = "Update category";
}

<h1 class="text-center p-2">Update category</h1>
<div class="container">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card card-body">
                <form method="post" enctype="multipart/form-data" asp-controller="Category" asp-action="Update" asp-route-categoryId="@Model.CategoryId">
                    <div asp-validation-summary="ModelOnly"> </div>
                    <div class="form-group required">
                        <label asp-for="Title"></label><br />
                        <input asp-for="Title" />
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group required">
                        <label asp-for="TitleImage"></label><br />
                        <input type="file" asp-for="TitleImage" />
                        <span asp-validation-for="TitleImage"></span>
                    </div>
                    <div class="form-group pt-1">
                        <button class="btn btn-primary btn-block" type="submit">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
