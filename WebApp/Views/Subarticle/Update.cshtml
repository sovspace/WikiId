@model WebApp.ViewModels.SubarticleViewModels.UpdateSubarticleViewModel;


<h1 class="text-center p-2">Update subarticle</h1>
<div class="container">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card card-body">
                <form method="post" asp-controller="Subarticle" asp-action="Update" asp-route-subarticleId ="@Model.SubarticleId">
                    <div asp-validation-summary="ModelOnly"> </div>
                    <div asp-validation-summary="ModelOnly"> </div>
                    <div class="form-group required">
                        <label asp-for="Title"></label><br />
                        <input asp-for="Title" />
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group required">
                        <label asp-for="Content"></label><br />
                        <input type="text" asp-for="Content" />
                        <span asp-validation-for="Content"></span>
                    </div>
                    <div class="form-group pt-1">
                        <button class="btn btn-primary btn-block" type="submit">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
