@model WebApp.ViewModels.UserViewModels.RegisterUserViewModel

<h1 class="text-center p-2">Registrate new user</h1>
<div class="container">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card card-body">

                <form method="post" asp-controller="Account" asp-action="Register">
                    <div asp-validation-summary="ModelOnly"> </div>

                    <div class="form-group required">

                        <div>
                            <label asp-for="Email"></label><br />
                            <input asp-for="Email" />
                            <span asp-validation-for="Email"></span>
                        </div>
                    </div>
                    <div class="form-group required">

                        <div>
                            <label asp-for="UserName"></label><br />
                            <input asp-for="UserName" />
                            <span asp-validation-for="UserName"></span>
                        </div>
                    </div>
                    <div class="form-group required">

                        <div>
                            <label asp-for="Password"></label><br />
                            <input asp-for="Password" />
                            <span asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="form-group required mt-4 mb-4">

                        <div>
                            <label asp-for="PasswordConfirm"></label><br />
                            <input asp-for="PasswordConfirm" />
                            <span asp-validation-for="PasswordConfirm"></span>
                        </div>
                    </div>
                        <div class="form-group pt-1">
                            <button class="btn btn-primary btn-block" type="submit">Registrate</button>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>
