@model WebApp.ViewModels.UserViewModels.LoginUserViewModel



<h1 class="text-center p-2">Login user</h1>
<div class="container">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card card-body">

                <form method="post" asp-controller="Account" asp-action="Login">
                    <div asp-validation-summary="ModelOnly"> </div>
                    <div class="form-group required">
                        <label asp-for="UserName"></label><br />
                        <input asp-for="UserName" />
                        <span asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group required">
                        <div>
                            <label asp-for="Password"></label><br />
                            <input asp-for="Password" />
                            <span asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="form-group mt-4 mb-4">
                        <label asp-for="RememberMe"></label><br />
                        <input asp-for="RememberMe" />
                        <span asp-validation-for="RememberMe"></span>
                    </div>
                    <div class="form-group pt-1">
                        <button class="btn btn-primary btn-block" type="submit">Log In</button>
                    </div>
                </form>
                <a class="btn btn-danger" href="@Url.ActionLink("GoogleLogin", "Account")">Log in with Google</a>
            </div>
        </div>
    </div>
</div>
